<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sample.project.mybatis_core.dao.IArticleMapper">
	<!--------------------------------- 配置一对一查询 --------------------- -->
	<!-- association:用于一对一的关联查询 property:对象属性名称 javaType:对象属性类型 colnum:所对应的外键字段名称 
		select:使用另一个查询封装的结果 -->
	<!-- 第一种 -->
	<resultMap type="Article" id="resultUserArticleOne">
		<id property="id" column="aid" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<association property="user" javaType="User">
			<id property="id" column="uid" />
			<result property="name" column="name" />
			<result property="age" column="age" />
		</association>
	</resultMap>
	<select id="resultUserArticleOne" parameterType="int"
		resultMap="resultUserArticleList">
		select u.name,u.id uid,u.age,a.id aid,a.title,a.content from
		user u,article a
		where a.userid = u.id and a.id=#{id}
	</select>
	
	<!-- 第二种 -->
	<resultMap type="Article" id="resultUserArticleTwo">
		<id property="id" column="aid" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<association property="user" javaType="User" column="id"
			select="" />
	</resultMap>
	<select id="selectUserByID"></select>

</mapper>